{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/",
    "rootDir": "./src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "allowJs": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true
  },
  "include": [
    "src/**/*"
  ],
}